<div class="container">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12 blog-content">
    <% @videos.each do |video| %>
    <div class="col-xs-12">
      <div class="text-center">
        <h2><%= post.title %></h2>
        <%= raw(video.description).truncate(145) %>
        <h6><%= video.created_at.strftime('%b %d, %Y') %></h6>
      </div>
    <div class="text-center">
        <%= link_to "View Video", video_path(video) %>
    </div>
    <% end %>
  </div>
</div>